<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationsFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <androidx.cardview.widget.CardView
               android:id="@+id/nita_logo"
               android:layout_width="200dp"
               android:layout_height="200dp"
               android:layout_marginTop="76dp"
               app:cardCornerRadius="100dp"
               android:elevation="20dp"
               app:cardElevation="20dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.426"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent">
               <ImageView
                   android:layout_margin="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/nita_logo"/>
           </androidx.cardview.widget.CardView>

           <TextView
               android:id="@+id/smoke_detector"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="36dp"
               android:fontFamily="@font/croissant_one"
               android:text="Smoke Detector"
               android:textAlignment="center"
               android:textSize="32dp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/nita_logo" />

           <TextView
               android:id="@+id/textView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="12dp"
               android:text="under the guidance of"
               android:textAlignment="center"
               android:textSize="20dp"
               android:textStyle="italic"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/smoke_detector" />

           <TextView
               android:id="@+id/textView2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="6dp"
               android:text="Dr. Mitra Barun Sarkar"
               android:textAlignment="center"
               android:textSize="25dp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="70dp"
               android:text="Team Members"
               android:textAlignment="center"
               android:id="@+id/team_mem_tv"
               android:textSize="23dp"
               android:textStyle="italic"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView2" />

           <androidx.cardview.widget.CardView
               android:id="@+id/sunku_card"
               android:layout_marginVertical="10dp"
               app:cardElevation="20dp"
               app:cardCornerRadius="15dp"
               android:layout_marginHorizontal="20dp"
               android:layout_width="match_parent"
               app:layout_constraintTop_toBottomOf="@id/team_mem_tv"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/abril_fatface"
                   android:text="Sunku Bharath"
                   android:textAlignment="center"
                   android:textSize="24sp" />
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/abhinav_card"
               app:cardCornerRadius="15dp"
               android:layout_marginVertical="1dp"
               app:cardElevation="20dp"
               android:layout_marginHorizontal="20dp"
               android:layout_width="match_parent"
               app:layout_constraintTop_toBottomOf="@id/sunku_card"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/abril_fatface"
                   android:text="Abhinav Veeramalla"
                   android:textAlignment="center"
                   android:textSize="24sp" />
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_marginVertical="1dp"
               app:cardCornerRadius="15dp"
               app:cardElevation="20dp"
               android:layout_marginHorizontal="20dp"
               android:id="@+id/samiddha_card"
               android:layout_width="match_parent"
               app:layout_constraintTop_toBottomOf="@id/abhinav_card"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/abril_fatface"
                   android:text="Samiddha Barman"
                   android:textAlignment="center"
                   android:textSize="24sp" />
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/biplab_card"
               app:cardCornerRadius="15dp"
               android:layout_width="match_parent"
               android:layout_marginVertical="1dp"
               app:cardElevation="20dp"
               android:layout_marginHorizontal="20dp"
               app:layout_constraintTop_toBottomOf="@id/samiddha_card"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/abril_fatface"
                   android:text="Biplab Sarkar"
                   android:textAlignment="center"
                   android:textSize="24sp" />
           </androidx.cardview.widget.CardView>
       </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>

</FrameLayout>